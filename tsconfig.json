{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "nodenext",
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "types": ["react/experimental", "@types/dom-view-transitions"],
    "jsx": "react-jsx",
    "paths": {
      "~/*": ["./app/*"]
    }
  }
}
