{
  "name": "blog",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "pnpm dev:new",
    "build": "pnpm build:new",
    "start": "pnpm --filter @blog/web start",
    "dev:web": "pnpm --filter @blog/web dev",
    "dev:cms": "pnpm --filter @blog/cms dev",
    "dev:new": "pnpm --recursive --parallel --filter @blog/web --filter @blog/cms dev",
    "build:web": "pnpm --filter @blog/web build",
    "build:cms": "pnpm --filter @blog/cms build",
    "build:new": "pnpm --recursive --filter @blog/web --filter @blog/cms build",
    "migrate:content": "pnpm --filter @blog/cms migrate:content",
    "typecheck": "pnpm --recursive --filter @blog/web --filter @blog/cms typecheck",
    "typecheck:new": "pnpm typecheck",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "autoprefixer": "10.4.17",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "tailwindcss": "3.4.1",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "*.{mjs,js,jsx,mts,ts,tsx,css,json,md}": "pnpm biome check --write"
  },
  "packageManager": "pnpm@8.15.5"
}
