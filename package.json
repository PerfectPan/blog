{
  "name": "blog",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "pnpm dev:new",
    "build": "pnpm build:new",
    "start": "pnpm --filter @blog/web start",
    "gen:rss": "pnpm legacy:gen:rss",
    "legacy:dev": "waku dev",
    "legacy:build": "waku build && pnpm legacy:gen:rss",
    "legacy:start": "waku start",
    "legacy:gen:rss": "node ./scripts/gen-rss.mjs",
    "dev:web": "pnpm --filter @blog/web dev",
    "dev:cms": "pnpm --filter @blog/cms dev",
    "dev:new": "pnpm --recursive --parallel --filter @blog/web --filter @blog/cms dev",
    "build:web": "pnpm --filter @blog/web build",
    "build:cms": "pnpm --filter @blog/cms build",
    "build:new": "pnpm --recursive --filter @blog/web --filter @blog/cms build",
    "migrate:content": "pnpm --filter @blog/cms migrate:content",
    "typecheck:new": "pnpm --recursive --filter @blog/web --filter @blog/cms typecheck",
    "prepare": "husky"
  },
  "dependencies": {
    "@shikijs/rehype": "^3.1.0",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.479.0",
    "next-mdx-remote": "^5.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-server-dom-webpack": "^19.0.0",
    "rehype-katex": "^7.0.0",
    "remark": "^15.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-math": "^6.0.0",
    "shiki": "^3.1.0",
    "waku": "0.21.22",
    "yaml": "^2.4.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/dom-view-transitions": "^1.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "10.4.17",
    "feed": "^4.2.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "tailwindcss": "3.4.1",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "*.{mjs,js,jsx,mts,ts,tsx,css,json,md}": "pnpm biome check --write"
  },
  "packageManager": "pnpm@8.15.5"
}
